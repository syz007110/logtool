{
  "name": "log-monitor-client",
  "version": "0.1.0",
  "description": "Windows Electron client for automatic log monitoring and upload",
  "main": "src/main/main.js",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win --x64",
    "build:installer": "electron-builder --win --x64 --nsis"
  },
  "build": {
    "appId": "com.logtool.monitor",
    "productName": "日志监控客户端",
    "directories": {
      "output": "release"
    },
    "files": [
      "src/**/*",
      "package.json"
    ],
    "extraFiles": [
      "config.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "src/assets/logo.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "src/assets/logo.ico",
      "uninstallerIcon": "src/assets/logo.ico",
      "installerHeaderIcon": "src/assets/logo.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "日志监控客户端"
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.${ext}"
    }
  },
  "dependencies": {
    "7zip-bin": "^5.1.1",
    "adm-zip": "^0.5.10",
    "axios": "^1.7.2",
    "chokidar": "^3.5.3",
    "form-data": "^4.0.0",
    "iconv-lite": "^0.6.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "electron": "^31.7.7",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9"
  },
  "optionalDependencies": {
    "better-sqlite3": "^12.4.1"
  }
}
